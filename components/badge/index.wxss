/* components/badge/index.wxss */

.badge-container {
  position: relative;
  display: inline-block;
}

.badge-container .info, .badge-container .dot,.badge-container .img {
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(50%,-18%);
  z-index: 2;
  box-sizing: border-box;
}

.badge-container .info {
  height: 16px;
  min-width: 16px;
  border-radius: 16px;
  font-size: 12px;
  color: white;
  border: 1px solid white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.badge-container .dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.badge-container .img{
  height: 16px;
  width: 16px;
}
.badge-container .img image{
  width: 100%;
  height: 100%;
}
